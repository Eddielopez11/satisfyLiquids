<!-- /snippets/social-meta-tags.liquid -->
{% comment %}
  Open graph tags
{% endcomment %}
{% if template == 'index' %}
  {%- comment %}<locksmith:8bd3>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="website">{% endif %}
    {%- comment %}original: <meta property="og:type" content="website">{%- endcomment %}
  {%- comment %}</locksmith:8bd3>{% endcomment -%}
  {%- comment %}<locksmith:c4c8>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ page_title }}">{% endif %}
    {%- comment %}original: <meta property="og:title" content="{{ page_title }}">{%- endcomment %}
  {%- comment %}</locksmith:c4c8>{% endcomment -%}
  {%- comment %}<locksmith:5363>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:description" content="{{ page_description }}">{% endif %}
    {%- comment %}original: <meta property="og:description" content="{{ page_description }}">{%- endcomment %}
  {%- comment %}</locksmith:5363>{% endcomment -%}
{% elsif template contains 'product' %}
  {%- comment %}<locksmith:d44d>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="product">{% endif %}
    {%- comment %}original: <meta property="og:type" content="product">{%- endcomment %}
  {%- comment %}</locksmith:d44d>{% endcomment -%}
  {%- comment %}<locksmith:4960>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ product.title | strip_html | escape }}">{% endif %}
    {%- comment %}original: <meta property="og:title" content="{{ product.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:4960>{% endcomment -%}
  {% for image in product.images reversed limit:3 %}
    {%- comment %}<locksmith:9c00>{% endcomment -%}
      {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ image | img_url: 'grande' }}">{% endif %}
      {%- comment %}original: <meta property="og:image" content="http:{{ image | img_url: 'grande' }}">{%- endcomment %}
    {%- comment %}</locksmith:9c00>{% endcomment -%}
    {%- comment %}<locksmith:e22a>{% endcomment -%}
      {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ image | img_url: 'grande' }}">{% endif %}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ image | img_url: 'grande' }}">{%- endcomment %}
    {%- comment %}</locksmith:e22a>{% endcomment -%}
  {% endfor %}
  {%- comment %}<locksmith:14fb>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:description" content="{{ product.description | strip_html | escape }}">{% endif %}
    {%- comment %}original: <meta property="og:description" content="{{ product.description | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:14fb>{% endcomment -%}
  {%- comment %}<locksmith:f76f>{% endcomment -%}
    {% include 'locksmith-variables' %}{% if locksmith_access_granted %}<meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html | escape }}">{% endif %}
    {%- comment %}original: <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:f76f>{% endcomment -%}
  {%- comment %}<locksmith:4f97>{% endcomment -%}
    {% include 'locksmith-variables' %}{% if locksmith_access_granted %}<meta property="og:price:currency" content="{{ shop.currency }}">{% endif %}
    {%- comment %}original: <meta property="og:price:currency" content="{{ shop.currency }}">{%- endcomment %}
  {%- comment %}</locksmith:4f97>{% endcomment -%}
{% elsif template contains 'article' %}
  {%- comment %}<locksmith:a42c>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="article">{% endif %}
    {%- comment %}original: <meta property="og:type" content="article">{%- endcomment %}
  {%- comment %}</locksmith:a42c>{% endcomment -%}
  {%- comment %}<locksmith:c312>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ article.title | strip_html | escape }}">{% endif %}
    {%- comment %}original: <meta property="og:title" content="{{ article.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:c312>{% endcomment -%}
  {% if article.image %}
    {%- comment %}<locksmith:b37c>{% endcomment -%}
      {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ article | img_url: '1024x1024' }}">{% endif %}
      {%- comment %}original: <meta property="og:image" content="http:{{ article | img_url: '1024x1024' }}">{%- endcomment %}
    {%- comment %}</locksmith:b37c>{% endcomment -%}
    {%- comment %}<locksmith:6c77>{% endcomment -%}
      {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ article | img_url: '1024x1024' }}">{% endif %}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ article | img_url: '1024x1024' }}">{%- endcomment %}
    {%- comment %}</locksmith:6c77>{% endcomment -%}
  {% endif %}
  {%- comment %}<locksmith:c7d0>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:description" content="{{ article.excerpt_or_content | strip_html | escape }}">{% endif %}
    {%- comment %}original: <meta property="og:description" content="{{ article.excerpt_or_content | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:c7d0>{% endcomment -%}
{% else %}
  {%- comment %}<locksmith:0bce>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="website">{% endif %}
    {%- comment %}original: <meta property="og:type" content="website">{%- endcomment %}
  {%- comment %}</locksmith:0bce>{% endcomment -%}
  {%- comment %}<locksmith:0f79>{% endcomment -%}
    {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ page_title | escape }}">{% endif %}
    {%- comment %}original: <meta property="og:title" content="{{ page_title | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:0f79>{% endcomment -%}
  {% if settings.logo_use_image %}
    {%- comment %}<locksmith:1f28>{% endcomment -%}
      {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ 'logo.png' | asset_url }}">{% endif %}
      {%- comment %}original: <meta property="og:image" content="http:{{ 'logo.png' | asset_url }}">{%- endcomment %}
    {%- comment %}</locksmith:1f28>{% endcomment -%}
    {%- comment %}<locksmith:611e>{% endcomment -%}
      {% include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}">{% endif %}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}">{%- endcomment %}
    {%- comment %}</locksmith:611e>{% endcomment -%}
  {% endif %}
{% endif %}
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:site_name" content="{{ shop.name }}">

{% comment %}
  Twitter card
{% endcomment %}
{% unless settings.social_twitter_link == blank %}
  <meta name="twitter:site" content="@{{ settings.social_twitter_link | split: 'twitter.com/' | last }}">
{% endunless %}
{% if template contains 'article' and article.image %}
  <meta name="twitter:card" content="summary_large_image">
{% else %}
  <meta name="twitter:card" content="summary">
{% endif %}
